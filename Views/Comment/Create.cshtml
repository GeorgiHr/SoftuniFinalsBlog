@model SoftuniFinalsBlog.Models.Comment

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>

        @using (Html.BeginForm("Create", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ArticleId)

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.VisitorsComment, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.VisitorsComment, new { @class = "form-control", @row = "10" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" value="Comment" class="btn btn-success" />
                </div>
            </div>

        }
        <div class="pull-left">
            @Html.ActionLink("Back to comments", "List", "Comment", new { @id = Model.ArticleId }, null)
        </div>
    </div>
</div>
